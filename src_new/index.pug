mixin li-link(text="", dest="#", fa="")
  li.link
    a(href=dest)=text
    if fa != ""
      i(class=`fa #{fa}`)

mixin search-bar()
  .search-bar
    input(name="search" placeholder="Søk...")
    button
      i.fa.fa-search

mixin tag-link(text="")
  li.tag
    a(href="#")=text

